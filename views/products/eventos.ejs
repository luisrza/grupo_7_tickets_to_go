<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/css/styleEve.css" />
  <%- include('../partials/head.ejs') %>
  <title>Eventos</title>
</head>

  <body>
    <header>
      <%-include('../partials/header.ejs')%>
    </header>
  <main>
    <section class="contenedor">
    <%for (let i=0;i < eventos.length ;i++){ %>

      <div class="tarjeta_eve">
      <a href="/products/eventos/detalles/<%=eventos[i].place%>"><h2 class="titleEvents"><%= eventos[i].place %></h2></a>
      
      <h3><%=eventos[i].date%></h3>
      
      <img class="imagen_eve" src="/img/<%=eventos[i].image%>" alt="foto_concierto">
      <!-- <p class="info"> <%=eventos[i].description%>
      </p> -->
    </div>
    <%}%>
  </section>
<br>
  <div class="contenedor-boton">
    <a href="/products/crearEvento" class="boton">Crear Evento Nuevo</a>
      </div>
<br>
  </main>

    <footer>
      <%-include('../partials/footer.ejs')%>
    </footer>
  </body>
</html>

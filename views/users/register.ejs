  <head>
    <link rel="stylesheet" href="/css/styleUser.css"> 
    <%- include('../partials/head.ejs') %>
    <title>Register</title>
  </head>

  <body>

  <header>
      <%- include('../partials/header.ejs') %>
  </header>

    <main>
      <div class="img_reg">
        <img src="../img/registrar.png" alt="registrar" />
      </div>

      <h2>Registrate:</h2>

      <form action="/users/register" method="POST" class="form_reg">
        <label>Nombre y Apellido:</label>
        <input type="text" name="nombre" placeholder="nombre" required />
        <br />
        <br />
        <label>Nombre de usuario:</label>
        <input
          type="text"
          name="user"
          placeholder="nombre de usuario"
          required
        />
        <br />
        <br />
        <label for="nacimiento">Fecha de nacimiento:</label>
        <input type="date" name="nacimiento" id="fechaNacimiento" required />
        <br />
        <br />
        <label>Email:</label>
        <input type="email" name="email" placeholder="email" required />
        <br />
        <br />
        <label for="avatar">Foto de perfil:</label>
        <input
          type="file"
          name="avatar"
          id="avatar"
          accept="image/png, image/jpeg"
        />
        <br />
        <br />
        <label>Contraseña:</label>
        <br />
        <input
          type="password"
          name="pass"
          placeholder="Elegí tu contraseña"
          required
        />
        <input
          type="password"
          name="pass_confirm"
          placeholder="Confirmá tu contraseña"
          required
        />
        <br />
        <br />
        <input
          type="checkbox"
          name="TerminosYCondiciones"
          value="si"
          id="si"
          required
        />
        <label for="si">Aceptar terminos y condiciones</label>
        <br />
        <br />
        <div class="botones">
          <input type="reset" value="Borrar" class="boton"/>
          <input type="submit" value="Enviar" class="boton"/>
        </div>
      </form>
        </div>
    </main>

  <footer>
    <%-include('../partials/footer.ejs')%>
  </footer>

  </body>

    <body>
      <header>
          <a href="/">
            <img class="logo" src="/img/Logo_transparente.png" alt=""/>
          </a>
      </header>
    <main>
      <h2>Entrar a mi sesion:</h2>
      <br />
      <div class="forma">
      <form action="/" method="POST">
        <label>E-mail:</label>
        <input
          class="textArea"
          type="email"
          name="email"
          id="email"
          placeholder=""
          required
        />
        <br />
        <br />
        <label>Constraseña:</label>
        <input
          class="textArea"
          type="password"
          name="pass"
          placeholder=""
          required
        />
        <p><a href="#">¿Olvidaste tu contraseña?</a></p>
        <!--No vimos como hacer esto-->
        <div class="checkbox">
        <input
          type="checkbox"
          name="RecordarMiUsuario"
          value="si"
          id="si"
          required
        />
        
        <label for="si">Recordar mi usuario</label>
        </div>
        <br />
        <br />

        <div class="contenedor-boton">
          <a href="#" type="submit" class="boton">Login</a>
        </div>
        <p><a href="/users/register">¿Sos nuevo? Crea tu cuenta acá</a></p>
      </div>
      </form>
    </div>

